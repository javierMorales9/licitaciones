{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",

    "verbatimModuleSyntax": false,
    "isolatedModules": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"]
}
