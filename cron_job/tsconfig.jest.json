{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "types": ["node", "jest"],
    "noUncheckedSideEffectImports": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "allowImportingTsExtensions": true
  }
}
